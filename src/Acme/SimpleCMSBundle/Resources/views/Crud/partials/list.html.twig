{% raw %}
<div ng-controller="ListCtrl">
    <div ng-repeat="post in posts">
        <div class="span12"><h3>{{ post.title }}</h3></div>
        <div class="span12 well well-large">{{ post.content }}</div>
        <div class="span12">By {{ post.author.firstname }} {{ post.author.lastname }} in {{ post.category.name }}</div>
        <div class="span12">
            <ul>
                <li ng-repeat="tag in post.tags ">{{ tag.name }}</li>
            </ul>
        </div>
    </div>
</div>
{% endraw %}
